<p style="color: green"><%= notice %></p>

<% content_for :title, "Members" %>


<table class="table table-dark table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Contact number</th>
      <th>Address</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Price</th>
      <th>On Track</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.first_name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.contact_number %></td>
        <td><%= member.address %></td>
        <td><%= member.try(:plan).try(:start_date)&.strftime("%-d %B, %Y") %></td>
        <td><%= member.try(:plan).try(:end_date)&.strftime("%-d %B, %Y") %></td>
        <td><%= member.try(:plan).try(:price) %></td>
        <td><%= member_on_track?(member) %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New member", new_member_path %>
